# ============================================
# BazaarHub Backend - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ---------------------------------------------
# Application Settings
# ---------------------------------------------
APP_NAME=BazaarHub
APP_VERSION=1.0.0
ENVIRONMENT=development  # development | staging | production
DEBUG=true

# ---------------------------------------------
# Database (MongoDB Atlas)
# ---------------------------------------------
# Get from: https://cloud.mongodb.com → Connect → Drivers
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=bazaarhub

# ---------------------------------------------
# Redis (Session & OTP Storage)
# ---------------------------------------------
# For local: redis://localhost:6379
# For cloud: redis://user:password@host:port
REDIS_URI=redis://localhost:6379

# ---------------------------------------------
# JWT Authentication
# ---------------------------------------------
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ---------------------------------------------
# CORS (Frontend Origins)
# ---------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:8081,exp://localhost:8081

# ---------------------------------------------
# Service Ports
# ---------------------------------------------
AUTH_SERVICE_PORT=8001
PRODUCT_SERVICE_PORT=8002
CART_SERVICE_PORT=8003
ORDER_SERVICE_PORT=8004

# ---------------------------------------------
# Email (Brevo / Sendinblue)
# ---------------------------------------------
# Get from: https://app.brevo.com → Settings → SMTP & API
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_NAME=BazaarHub
BREVO_SENDER_EMAIL=noreply@bazaarhub.com

# ---------------------------------------------
# Stripe Payment
# ---------------------------------------------
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ---------------------------------------------
# Social OAuth (Optional - for social login)
# ---------------------------------------------
# Google OAuth: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple Sign In: https://developer.apple.com
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
# APPLE_PRIVATE_KEY_PATH=./keys/apple-auth-key.p8
